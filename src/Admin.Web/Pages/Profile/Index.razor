@page "/profile/{Id:guid}"
@using Admin.Shared.Dto
@using Admin.Web.Application.Services
@inject IAuthenticationService AuthenticationService

<CustomCard>

    <dl style="max-width: 500px" class="overflow-hidden">
        <dt>Email</dt>
        <dd>@_user.Email</dd>
        <dt>UserId</dt>
        <dd>@_user.UserId</dd>
        <dt>Token</dt>
        <dd>@_user.Token</dd>
    </dl>

</CustomCard>


@code {
    [Parameter]
    public Guid Id { get; set; }
    private AuthResponse _user = new AuthResponse(){Email = "Not logged in",Token = "Not logged in",UserId = Guid.Empty};
    protected override void OnInitialized()
    {
        if (AuthenticationService.User != null)
            _user = AuthenticationService.User;
        base.OnInitialized();
    }
}