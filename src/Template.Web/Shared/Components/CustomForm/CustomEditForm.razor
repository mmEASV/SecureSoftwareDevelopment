@namespace Template.Web.Shared.Components.CustomForm

@typeparam T

@inherits CustomComponentBase

<div class="@Class">
    <EditForm Model="@Object" class="form" OnValidSubmit="SubmitForm" >
        <FluentValidationValidator/>
        @ChildContent
        <ValidationSummary />
        <div class="d-flex mt-2 gap-3">
            <button class="btn btn-primary w-100">
                <i class="bi bi-floppy"></i>
                Uložiť
            </button>
            <button type="button" class="btn btn-danger w-100" @onclick="OnOpenDeleteDialog">
                Vymazať
                <i class="bi bi-trash3"></i>
            </button>
        </div>
    </EditForm>
</div>
