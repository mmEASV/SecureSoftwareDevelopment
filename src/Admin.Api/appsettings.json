{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Admin.Api.Services.WebhookNotificationService": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileStorage": {
    "Path": "./updates"
  },
  "DigitalSignature": {
    "PrivateKeyPath": "./keys/vendor-private-key.pem",
    "PublicKeyPath": "./keys/vendor-public-key.pem"
  },
  "ConnectionStrings": {
    "UpdateServiceDb": "Host=localhost;Port=5432;Database=vendor_updates;Username=postgres;Password=postgres"
  },
  "Webhooks": {
    "Clients": [
      {
        "Name": "Development Client (localhost)",
        "WebhookUrl": "https://localhost:7200/api/webhooks/release-notification",
        "WebhookSecret": "your-webhook-secret-change-in-production",
        "IsActive": true,
        "_Comment": "In production, replace with actual client tunnel URLs (e.g., https://customer-tunnel.trycloudflare.com/api/webhooks/release-notification)"
      }
    ],
    "_Comment": "List of registered clients that receive webhook notifications when new releases are created"
  }
}
